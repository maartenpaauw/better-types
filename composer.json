{
    "name": "spatie/better-types",
    "description": "Improved abstraction for dealing with union and named types.",
    "keywords": [
        "spatie",
        "better-types"
    ],
    "homepage": "https://github.com/spatie/better-types",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brent@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/collections": "^10|^11|^12"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\BetterTypes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\BetterTypes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "phpstan": "vendor/bin/phpstan analyse src tests -l4",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
